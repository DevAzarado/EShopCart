                        <p class="text-muted">No credit card required</p>
                    </span>
                </div>
                <div class="col-lg-4 align-items-center d-flex">
                    <img src="https://dummyimage.com/1200x800/949494/fff.png" alt="" class="img-fluid">
                </div>
            </div>
        </div>
    </div>
}
